    "@types/react": "^18.2.48",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.4.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@movie-web/eslint-config/base",
      "@movie-web/eslint-config/react"
    ],
    "ignorePatterns": [
      "expo-plugins/**"
    ]
  },
  "prettier": "@movie-web/prettier-config"
}
