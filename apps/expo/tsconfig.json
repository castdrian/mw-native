{
  "extends": ["@movie-web/tsconfig/base.json"],
  "compilerOptions": {
    "incremental": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~/components/*": ["./src/components/*"],
    },
    "jsx": "react-native",
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
  },
  "include": ["src", "*.ts", "*.js", ".expo/types/**/*.ts", "expo-env.d.ts", "config-plugins/*"],
  "exclude": ["node_modules"],
}
