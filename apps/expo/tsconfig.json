{
  "extends": ["@movie-web/tsconfig/base.json"],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~/components/*": ["./src/components/*"],
      "modules/*": ["./modules/*"],
    },
    "jsx": "react-native",
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
  },
  "include": [
    "src",
    "modules",
    "*.ts",
    "*.js",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src/plugins/*",
  ],
  "exclude": ["node_modules"],
}
